@model Ecommerce.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "GetLogin";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<div class = "login-container">
    <h1>Login</h1>
    <form class="form-group" asp-controller ="Authentication" asp-action="GetLogin" method="post">
        <div class="signOn">
             <div class="form-control">
                <label>Email:</label>
                <input asp-for="Email"/> 
            </div>
            <div class="form-control">
                <label>Password:</label>
                <input asp-for="Password" />
            </div>
        </div>       
        <div class="form-action">
            <button type="submit">Log In</button>           
        </div> 
        <div class="signup-text">
            <p>New User? Please <a asp-controller="Authentication" asp-action="LoadSignUp">SignUp</a> to Register</p>                
        </div>
    </form>
</div>

