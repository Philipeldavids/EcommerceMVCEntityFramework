@model Ecommerce.Models.User

@{
    ViewData["Title"] = "Register";
}


<div class="signup-container">
    <h1>Register</h1>
    <form class="form-group" asp-controller ="User" asp-action="Register" method="post">
        <div class="signUp">
            <div class="form-control">
                <label>FirstName:</label>
                <input asp-for="FirstName" />
            </div>
            <div class="form-control">
                <label>LastName:</label> 
                <input asp-for="LastName" />
            </div>
            <div class="form-control">
                <label>Email:</label> 
                <input asp-for="Email" />
            </div>
            <div class="form-control">
                <label>Password:</label> 
                <input asp-for="Password" />
            </div>
            <div class="form-control">
                <label>PhoneNumber:</label> 
                <input asp-for="PhoneNumber" />
            </div>
             <div class="form-control">
                <label>Address:</label> 
                <textarea id="text" name="text" rows="40" cols="50" asp-for="Address" ></textarea>
            </div>
        </div>
        <div class="gender">
            <div>
                <label>Male</label> 
                <input type="checkbox" asp-for="Gender"/><br />
            </div>
            <div>
                <label>Female</label> 
                <input type="checkbox" asp-for="Gender"/><br />
            </div>
        </div>
        <div class="form-control">
            <label>DateofBirth</label> 
            <input type="Date" asp-for="DateofBirth" /><br />   
        </div>
        <div class= "form-action">
            <button type="submit">Register</button>
        </div>     
        
    </form>
</div>
